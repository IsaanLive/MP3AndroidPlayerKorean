<RelativeLayout 
    android:id="@+id/action_bar" 
    android:background="@drawable/shape_background_grey" 
    android:layout_width="fill_parent" 
    android:layout_height="44.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginLeft="5.0dip" 
		android:layout_marginRight="10.0dip"
		android:layout_centerVertical="true"
		android:src="@drawable/icon"
        android:adjustViewBounds="true" 
        android:contentDescription="@string/logo_icon_desc"
        android:scaleType="centerCrop"
    />
    
    <ImageView 
        android:id="@+id/action_search" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10.0dip" 
        android:layout_marginRight="5.0dip" 
        android:src="@drawable/action_search" 
        android:layout_alignParentRight="true" 
        android:layout_centerVertical="true" 
        android:contentDescription="@string/action_search_desc"
    />
    
    <FrameLayout 
        android:id="@+id/title_text_frame" 
        android:visibility="visible" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="5.0dip" 
        android:layout_toRightOf="@+id/logo_icon" 
        android:layout_toLeftOf="@+id/action_search" 
        android:layout_centerVertical="true"

    >
        <TextView 
            android:typeface="normal" 
            android:textStyle="normal" 
            android:ellipsize="marquee" 
            android:gravity="center" 
            android:layout_gravity="center_horizontal" 
            android:id="@+id/title_bar_text" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="" 
            android:singleLine="true" 
            android:textColor="#000"
            android:textSize="20sp"
            android:shadowColor="#fff" 
            android:shadowDx="0.0" 
            android:shadowDy="1.0"
            android:shadowRadius="1.0" 
        />
        
    </FrameLayout>
</RelativeLayout>